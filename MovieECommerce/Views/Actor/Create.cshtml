@model MovieECommerce.ViewModels.ActorViewModel


@{
    ViewData["Title"] = "Add a New Actor";
}

<div class="row justify-content-center align-items-center">
    <h3 >@ViewData["Title"]</h3>

</div>

<section>
    <div class="container">
        <form enctype="multipart/form-data" method="post" class="row d-flex justify-content-center align-items-center h-100"
              asp-controller="Actor" asp-action="Create">
            <div class="col-xl-9">

                @*Display an error message if image could not be added*@
                <span class="text-danger my-2">@TempData["Error"]</span>
                <span asp-validation-summary="ModelOnly"></span>

                <input hidden asp-for="ActorId"  />

                <div class="card" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="row align-items-center pt-4 pb-3">
                            <div class="col-md-3 ps-5">

                                <label asp-for="FullName" class="mb-0"></label>

                            </div>
                            <div class="col-md-9 pe-5">

                                <input asp-for="FullName" type="text" class="form-control form-control-lg" placeholder="Enter Name of Actor" />
                                <span asp-validation-for="FullName" class="text-danger"></span>

                            </div>
                        </div>


                        <hr class="mx-n3">
                        <div class="row align-items-center py-3">
                            <div class="col-md-3 ps-5">

                                <label asp-for="BioInformation" class="mb-0"></label>

                            </div>
                            <div class="col-md-9 pe-5">

                                <textarea asp-for="BioInformation" type="email" class="form-control form-control-lg" placeholder="Enter the Biography of Actor"></textarea>
                                <span asp-validation-for="BioInformation" class="text-danger"></span>


                            </div>
                        </div>


                        <hr class="mx-n3">
                        <div class="custom-file row align-items-center w-100">
                            <div class="col-md-3 ps-5">

                                <label asp-for="ProfilePictureURL" class="mb-0"></label>

                            </div>
                            <div class="col-md-9 pe-5 justify-content-center">

                                <input asp-for="ProfilePictureURL" type="file" class="custom-file-input" />
                                <span asp-validation-for="ProfilePictureURL"></span>

                            </div>
                        </div>


                        <div class="d-flex flex-row justify-content-center">
                            <div class="px-5 py-4">
                                <button type="submit" class="btn btn-primary btn-lg">Add Actor</button>
                                 <a class="btn btn-outline-primary ms-4 btn-lg" asp-controller="Actor" asp-action="Index"> List of Actors </a>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        </form>
    </div>
</section>
