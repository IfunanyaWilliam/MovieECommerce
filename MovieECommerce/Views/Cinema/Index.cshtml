@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px;">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayNameFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => @item.Description)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary"><i class="fa fa-edit"></i> Edit </a> |
                            <a class="btn btn-outline-info"><i class="fa fa-eye"></i>  Details </a> |
                            <a class="btn btn-danger text-white" href="#"> <i class="fa fa-trash-o fa-lg"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
